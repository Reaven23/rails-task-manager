<div class="container text-center justify-content-center">
<h1>MY TASKS</h1>
<div class="d-flex">
  <ul class="list-unstyled mx-auto justify-content-center">
  <% @tasks.each do |task| %>
    <li class="">
      <div class=" container d-flex m-3 justify-content-between">
          <div>
            <input type="checkbox"  <% if task.completed %> checked <% end %> >
          </div>

          <div>
            <%= link_to task_path(task) do %>
            <p><%= "#{task.title}" %></p>
            <% end %>
          </div>

          <div>
            <%= link_to kill_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-thin fa-trash-can fa-lg" style="color: #da0b0b;"></i>
            <% end %>
          </div>
      </div>
    </li>
  <% end %>
  </ul>

</div>
<div class="bg-success">
<%= link_to "Add a new task", tasks_new_path %>
</div>
</div>
